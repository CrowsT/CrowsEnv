zsh:
    curl
    oh-my-zsh
tmux:
vim:
    go
    python
    node
    rust
    other:
        ripgrep
python:
    flake8
go:
node:
    tern
rust:
    cargo

----
# CrowsEnv
git clone https://github.com/CrowsT/CrowsEnv.git
# oh-my-zsh
apk add -U zsh git curl
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"
echo "~/CrowsEnv/zsh/.crows-zsh" >> .zshrc
# tmux, oh-my-zsh
apk add -U tmux
ln -s /root/CrowsEnv/tmux/.tmux.conf /root/.tmux.conf
# Languages
apk add -U python3-dev go cargo nodejs-npm nodejs-dev
# vim
ln -s /root/CrowsEnv/vim/.vimrc /root/.vimrc
ln -s /root/CrowsEnv/vim/.vim /root/.vim

# ycmd
apk add -U make cmake llvm5-dev clang-dev build-base 